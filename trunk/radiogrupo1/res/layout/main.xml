<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <Button android:id="@+id/quit" android:layout_height="50px" android:text="X" android:layout_width="50px" android:textStyle="bold" android:textSize="20px" android:layout_marginLeft="265px" android:layout_marginTop="10px" android:layout_marginBottom="-30px"/><ImageView android:id="@+id/ImageView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/log" android:paddingTop="20px" android:paddingLeft="35px"></ImageView>
    
    
    
 <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/station_prompt"
    />
    <Spinner 
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/station_prompt"
    />

<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"/>
    
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:text="Controles"/>
<Button  
    android:id="@+id/playpause"
    android:layout_width="150px" 
    android:layout_height="50px" 
    android:text="Play" android:layout_marginTop="10px" android:layout_marginLeft="10px"/>
<Button  
    android:id="@+id/stop"
    android:layout_width="150px" 
    android:layout_height="50px" 
    android:text="Stop"
    android:layout_marginLeft="160px" android:layout_marginTop="-51px"/>


<TextView  
    android:id="@+id/selected_station"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" /> 

<TextView  
    android:id="@+id/state"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" android:textColor="@color/naranja"/>
    

<ImageView android:id="@+id/ImageView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/icon" android:layout_marginLeft="220px" android:layout_marginTop="-30px"></ImageView>
</LinearLayout>

